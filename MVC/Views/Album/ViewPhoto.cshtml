@model BLL.Interface.Entities.PhotoEntity

<div class="col-md-8">
    <figure>
        @Html.Raw("<img class='img-responsive' Id src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(Model.Image) + "\" />")
        <figcaption>
            @if (!ViewBag.IsMy)
            {
                @Html.ActionLink("Nice:", "AddLike", "Album", new { id = Model.Id }, new { @class = "btn btn-sm", @id = "like" });

            }
            @Model.likesNumber
            @Model.LoadDate.ToShortDateString() |
            @Model.Description
        </figcaption>
    </figure>
</div>

@section scripts{
    @Scripts.Render("~/scripts/PhotoView.js")
}